{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/256-recipes/yuml/releases/download/${version}/ingredient.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "amount": {
      "$ref": "amount.json"
    },
    "alternatives": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/alternative"
      }
    },
    "optional": {
      "type": "boolean"
    }
  },
  "required": ["name"],
  "additionalProperties": false,
  "$defs": {
    "alternative": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "amount": {
          "$ref": "amount.json"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    }
  }
}
